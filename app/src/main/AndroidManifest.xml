                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MiUbicacion"
            android:label="@string/title_activity_mi_ubicacion" >
